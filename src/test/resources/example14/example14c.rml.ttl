@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix crml: <http://semweb.mmlab.be/ns/rml/condition#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix mail: <http://example.com/mail#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix ex: <http://www.example.com/> .
@base <http://example.com/base> .

<#PaperAuthor>
    rml:logicalSource [ 
	rml:source "/example14/example14.xml";
        rml:referenceFormulation ql:XPath;
	rml:iterator "/papers/paper";
    ];

    rr:subjectMap [
        rr:template "http://www.ex.com/paper/{@id}"; 
    ];
    
    rr:predicateObjectMap [
        rr:predicate ex:author;

        rr:objectMap [ 
            rr:template "http://www.ex.com/author/{authors}" ;

            crml:splitCondition [ 
                crml:condition "," ;

                crml:processCondition [ 
                    crml:condition " " ;
                    crml:value "" 
                ] ;
            ] 
        ]
    ];
    
    rr:predicateObjectMap [
        rr:predicate ex:author;

        rr:objectMap [ 
            rml:reference "authors" ;
            crml:splitCondition [ 
                crml:condition "," ] ;
            ]
    ].